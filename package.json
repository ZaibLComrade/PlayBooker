{
	"name": "playbooker",
	"version": "1.0.0",
	"description": "Express.js backend for a sport facility booking platform.",
	"main": "dist/server.js",
	"scripts": {
		"start": "NODE_ENV=production node dist/server.js",
		"start:watch": "NODE_ENV=development nodemon dist/server.js",
		"build": "tsc",
		"build:watch": "tsc -w",
		"dev": "concurrently --kill-others \"npm run start:watch\" \"npm run build:watch\"",
		"lint": "eslint --ignore-path .gitignore . --ext .ts",
		"lint:fix": "eslint --ignore-path .gitignore . --ext .ts --fix",
		"format": "prettier --ignore-path .gitignore --write ."
	},
	"keywords": [
		"node",
		"express",
		"backend",
		"CRUD",
		"Restfull API",
		"authentication",
		"zod",
		"mongoose"
	],
	"author": {
		"name": "Zaib Khan",
		"email": "kmjahanzaib@proton.me",
		"url": "https://github.com/ZaibLComrade"
	},
	"devDependencies": {
		"@eslint/js": "^9.4.0",
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jsonwebtoken": "^9.0.6",
		"@typescript-eslint/eslint-plugin": "^6.21.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard-with-typescript": "^43.0.1",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.2",
		"eslint-plugin-promise": "^6.2.0",
		"nodemon": "^3.1.3",
		"prettier": "^3.3.2",
		"typescript": "^5.3.5",
		"typescript-eslint": "^7.13.0"
	},
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"concurrently": "^8.2.2",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.4.1",
		"zod": "^3.23.8"
	}
}
