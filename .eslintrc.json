{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["standard-with-typescript", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns": ["node_modules", "dist"],
	"rules": {
		"no-unused-vars": "error",
		"no-unused-expressions": "error",
		"prefer-const": "error",
		"no-console": "warn",
		"no-undef": "error"
	},
	"globals": {
		"process": "readonly"
	}
}
